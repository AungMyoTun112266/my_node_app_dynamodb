{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,          // Enable experimental decorators
    "emitDecoratorMetadata": true            // Enable emitting metadata for decorators
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
